{% extends 'base.html.twig' %}

{% block title %}Lista{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 90%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% if todos %}

<div class="example-wrapper">
    <table class="table table-striped table-inverse table-responsive" id="todos">
        <thead class="thead-inverse">
            <tr>
                <th>ID</th>
                <th>Tarea</th>
                <th>Categoria</th>
                <th>Descripcion</th>
                <th>Fecha</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for todo in todos %}
                <tr>
                    <td scope="row">{{ todo.id }}</td>
                    <td scope="row">{{ todo.nombre }}</td>
                    <td scope="row">{{ todo.categoria }}</td>
                    <td scope="row">{{ todo.descripcion }}</td>
                    <td scope="row">{{ todo.fecha | date('F j, Y')}}</td>
                    <td>
                    <a href="/todo/{{ todo.id }}" class="btn btn-dark">Ver</a>
                    <a href="" class="btn btn-danger borrar-todo" data-id="{{ todo.id }}"><i class="fa fa-trash-alt"></i></a>
                    <a href="/todo/editar/{{ todo.id }}" class="btn btn-success"><i class="fa fa-pencil-alt"></i></a>
                    </td>
                    
                </tr>
             {% endfor %}
            </tbody>
    </table>
    {% else %}
        <p>No hay tareas</p>
    {% endif %}
</div>
{% endblock %}
 {% block javascripts %}
    <script src="/js/main.js"></script>
 {% endblock %}
